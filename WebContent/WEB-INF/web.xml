<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         id="WebApp_ID" version="4.0">

    <display-name>SistemaGestionContratos</display-name>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>main.java.controllers.UsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/usuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/usuarios/*</url-pattern> </servlet-mapping>

    <servlet>
        <servlet-name>ContratoServlet</servlet-name>
        <servlet-class>main.java.controllers.ContratoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContratoServlet</servlet-name>
        <url-pattern>/contratos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContratoServlet</servlet-name>
        <url-pattern>/contratos/*</url-pattern> </servlet-mapping>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location> </error-page>

</web-app>
